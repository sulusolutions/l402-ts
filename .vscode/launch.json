{
    "version": "0.2.0",
    "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--reporter",
        "dot",
        "--slow",
        "5000",
        "--colors",
        "${workspaceFolder}/test/**/*.spec.js",

      ],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Example",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/examples/randomNumber.js"
        }
    ]
}