{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,    // Specifically catches missing type annotations
    "pretty": false,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]

}
